<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sova_anim"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/wtt"
        style="@style/title"
        android:layout_marginBottom="@dimen/button_text"
        android:layout_marginTop="@dimen/button_text"
        android:text="@string/wtt" />

    <RelativeLayout
        android:id="@+id/clock"
        android:layout_width="300dp"
        android:layout_height="300dp">

        <com.rudzko.firstapp.hw_4.ClockView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.rudzko.firstapp.hw_4.RunningArrows
            android:id="@+id/arrows"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>